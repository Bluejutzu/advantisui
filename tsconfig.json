{
  "compilerOptions": {
    /* === General Build Settings === */
    "target": "ES2020",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    /* === React Support === */
    "jsx": "react-jsx",
    /* === Output === */
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    /* === Node Compatibility === */
    "types": ["node"],
    /* === Path Aliases (optional but handy) === */
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@cli/*": ["cli/*"],
      "@/*": ["../src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
